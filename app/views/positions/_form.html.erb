<%= simple_form_for @position do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="field is-inline-flex">
      <%= f.association :person %>
      <%= f.association :team %>
      <%= f.association :organization %>
    </div>
    <div class="field is-inline-flex">
      <%= f.input :position_type, as: :select, collection: Position::FORM_CONTACT_TITLES %>
      <%= f.input :name %>
    </div>
    <%= f.input :description %>
    <div class="field is-inline-flex">
      <%= f.input :start_date %>
      <%= f.input :end_date %>
    </div>
    <%= f.input :is_primary, as: :radio_buttons, label: "Primary point of contact for this Organization" %>
    <br>
    <%= f.input :notes %>
    <%= f.input :display_on_org_chart, as: :radio_buttons %>
  </div>

  <%= render "layouts/view_footer_buttons", f: f, resource: @position, top_divider: true, extra_form_button_1: nil, extra_form_button_2: nil %>
<% end %>
