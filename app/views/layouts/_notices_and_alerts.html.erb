<% if alert || notice %>
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      VueInstances.notice(<%= raw({
        message: alert ? alert : notice,
        type: alert ? 'is-danger' : 'is-info',
        indefinite: alert.present?,
      }.to_json) %>)
    })
  </script>
<% end %>
